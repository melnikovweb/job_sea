<section class="{{ class }} {{ class }}-{{ type }} {{ classes }} {{ block_classes }}" {{ block.anchor ? 'id=' ~ block.anchor : null }}>

  
  <div class="sk-container sk-container--fl">

    <div class="{{ class }}-content sk-container">

      {% if top_layer_mobile %}
      <div class="{{ class }}-top-image sk-only-m">
        {% include 'parts/components/image.twig' with {'id': top_layer_mobile, 'class': 'img-fluid', 'sizes': '393px'} only %}
      </div>
      {% elseif options.single_top_layer_mobile %}
      <div class="{{ class }}-top-image sk-only-m">
        {% include 'parts/components/image.twig' with {'id': options.single_top_layer_mobile, 'class': 'img-fluid', 'sizes': '393px'} only %}
      </div>
      {% endif %}
    
      {% if bg_image_mobile %}
      <div class="{{ class }}-bg-image sk-only-m">
        {% include 'parts/components/image.twig' with {'id': bg_image_mobile, 'class': 'img-fluid', 'sizes': '390px'} only %}
      </div>
      {% elseif options.single_image_mobile %}
      <div class="{{ class }}-bg-image sk-only-m">
        {% include 'parts/components/image.twig' with {'id': options.single_image_mobile, 'class': 'img-fluid', 'sizes': '390px'} only %}
      </div>
      {% endif %}

      <div class="{{ class }}-title-wrapper" style="background-image: linear-gradient(110.07deg, #234891 14.79%, rgba(35, 72, 145, 0) 58.83%), url({{options.single_image_mobile}});">
      {% if not (title is empty) %}
        <h1 class="{{ class }}-title">{{ title }}</h1>
      {% else %}
        <h1 class="{{ class }}-title">{{ default_title }}</h1>
      {% endif %}
    </div>
      {% if not (description is empty) %}
      <p class="{{ class }}-description">{{ description }}</p>
      {% endif %}
    </div>

  </div>

  {% if top_layer %}
  <div class="{{ class }}-top-image sk-only-d">
    {% include 'parts/components/image.twig' with {'id': top_layer, 'class': 'img-fluid', 'sizes': '696px'} only %}
  </div>
  {% elseif options.single_top_layer %}
  <div class="{{ class }}-top-image sk-only-d">
    {% include 'parts/components/image.twig' with {'id': options.single_top_layer, 'class': 'img-fluid', 'sizes': '696px'} only %}
  </div>
  {% endif %}

  {% if bottom_layer %}
  <div class="{{ class }}-bottom-image sk-only-d">
    {% include 'parts/components/image.twig' with {'id': bottom_layer, 'class': 'img-fluid', 'sizes': '687px'} only %}
  </div>
  {% elseif options.single_bottom_layer %}
  <div class="{{ class }}-bottom-image sk-only-d">
    {% include 'parts/components/image.twig' with {'id': options.single_bottom_layer, 'class': 'img-fluid', 'sizes': '687px'} only %}
  </div>
  {% endif %}

  {% if bg_image %}
  <div class="{{ class }}-bg-image sk-only-d">
    {% include 'parts/components/image.twig' with {'id': bg_image, 'class': 'img-fluid', 'sizes': '1440px'} only %}
  </div>
    {% elseif options.single_image %}
    <div class="{{ class }}-bg-image sk-only-d">
      {% include 'parts/components/image.twig' with {'id': options.single_image, 'class': 'img-fluid', 'sizes': '1440px'} only %}
    </div>
  {% endif %}

</section>
