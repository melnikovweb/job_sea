<footer class="footer">
  <div class="sk-container">
    <div class="footer-wrapper">
      <a href="{{ site.url }}" rel="home" class="footer-logo">
        {% if not (options.alt_logo is empty) %}
          {% if not (options.alt_logo is empty) %} {% include
            'parts/components/image.twig' with {'id': options.alt_logo, 'classes':
              'footer-image', 'sizes': '748px'} only %} {% endif %}
        {% else %}
          <img src="{{ logo }}" alt="site-logo" class="footer-image" height="29" width="115">
        {% endif %}
      </a>
      {% if options.copyright %}
        <div class="footer-copyright">
          {{ options.copyright |replace({'@year': "now"|date('Y')}) }}
        </div>
      {% endif %}
      {% if options.socials %}
        <ul class="socials">
          {% for item in options.socials %}
            <li class="socials-item">
              <a href="{{ item.social_link }}" target="_blank" title="Social link" class="socials-link">
                <i class="{{ item.social_icon ? 'fab fa-' ~ item.social_icon : 'fas fa-link' }}"></i>
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
</footer>
